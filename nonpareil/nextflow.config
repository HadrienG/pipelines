manifest {
    mainScript = 'nonpareil.nf'
}

profiles {
    standard {
        executor = 'local'
        process.container = 'hadrieng/nonpareil'
        docker.enabled = true
    }
    planet {
        executor = 'sge'

        process.$adapter_trimming {
            clusterOptions = '-S /bin/bash'
            time = '30m'
            cpus = 1
            memory = '1G'
            module = 'scythe'
        }

        process.$quality_trimming {
            clusterOptions = '-S /bin/bash'
            time = '30m'
            cpus = 1
            memory = '1G'
            module = 'sickle'
        }

        process.$nonpareil {
            clusterOptions = '-S /bin/bash'
            time = '2h'
            cpus = 12
            memory = '1G'
            module = 'nonpareil'
        }

        process.$curves {
            clusterOptions = '-S /bin/bash'
            time = '30m'
            cpus = 1
            memory = '1G'
            module = 'nonpareil'
        }
    }
}

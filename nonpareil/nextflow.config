manifest {
    mainScript = 'nonpareil.nf'
}

profiles {
    standard {
        executor = 'local'
        process.container = 'hadrieng/nonpareil'
        docker.enabled = true
    }
    planet {
        executor = 'sge'
        queue = 'all.q@planetsmasher.hgen.slu.se'
        memory = '1G'
        cpus = 12

        process.module = 'scythe:sickle:nonpareil'
    }
}

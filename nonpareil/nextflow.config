manifest {
    mainScript = 'nonpareil.nf'
}

params {
    output = 'results/'
}

process {
    container hadrieng/nonpareil
    publishDir = [path: params.output, mode: 'copy', overwrite: 'true']
}

profiles {
    planet {
        executor = 'sge'
        queue = 'all.q@planetsmasher.c.hgen.slu.se'
        memory = '2G'
        cpus = '12'
    }
}

manifest {
    mainScript = 'nonpareil.nf'
}

profiles {
    standard {
        executor = 'local'
        process.container = 'hadrieng/nonpareil'
        docker.enabled = true
    }
    planet {
        executor = 'sge'
        memory = '1G'
        cpus = 12
        time = '2h'
        module = ['scythe', 'sickle', 'nonpareil']
    }
}

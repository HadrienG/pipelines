manifest {
    mainScript = 'nonpareil.nf'
}

profiles {
    standard {
        executor = 'local'
        process.container = 'hadrieng/nonpareil'
        docker.enabled = true
    }
    planet {
        executor = 'sge'

        $adapter_trimming {
            process.clusterOptions = '-S /bin/bash'
            process.time = '30m'
            process.cpus = 1
            process.memory = '1G'
            process.module = 'scythe'
        }

        $quality_trimming {
            process.clusterOptions = '-S /bin/bash'
            process.time = '30m'
            process.cpus = 1
            process.memory = '1G'
            process.module = 'sickle'
        }

        $nonpareil {
            process.clusterOptions = '-S /bin/bash'
            process.time = '2h'
            process.cpus = 12
            process.memory = '1G'
            process.module = 'nonpareil'
        }

        $curves {
            process.clusterOptions = '-S /bin/bash'
            process.time = '30m'
            process.cpus = 1
            process.memory = '1G'
            process.module = 'nonpareil'
        }
    }
}
